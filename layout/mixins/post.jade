mixin postInfo(item)
    header.post-info
        if is_home() || is_post()
          != full_date(item.date, 'll')
        else
          != full_date(item.date, 'MMM DD')
        if item.from && (is_home() || is_post())
            a.post-from(href=item.from target="_blank" title=item.from) Translated from
        if is_home() || is_post()
            div.fb-ir-time
                time.op-modified(dateTime=item.date.toISOString())
                time.op-published(dateTime=item.date.toISOString())
            div.tags
                - item.tags.each(function (tag) {
                    a.tag-link(href='/tags/'+tag.name) #
                        != tag.name
                - })

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    h3.post-subtitle
                        != item.subtitle
                    +postInfo(item)
                    - if (item.banner)
                        a.post-banner(href= url_for(item.path))
                            img(src= item.banner)
                    .post-content
                        - var excerpt = item.excerpt ? item.excerpt : truncate(strip_html(item.content), { length: 150, omission: ' ...' })
                        - excerpt = excerpt.replace(/(<\/\w+>)$/, '...$1')
                        != excerpt
                    a.read-more(href= url_for(item.path))!= __('Read more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change 
                h2.archive-year!= year
            .post-item
                +postInfo(item)
                a.post-title-link(href= url_for(item.path))
                    != item.title
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            .wrap
                h1.post-title
                    != item.title
                h2.post-subtitle
                    != item.subtitle
                +postInfo(item)
            - if (item.banner)
                .post-banner
                    img(src= item.banner)
            .wrap
                .post-content
                    != item.content

